extends layout

block content
  h1= title
  section#header
    p 
      a.button(href='books/new') Create New Book
    form(action='/books/search' method='get')
      input(type='text' name='term')
      input#search(type='submit' value='Search')
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href= '/books/' + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year
